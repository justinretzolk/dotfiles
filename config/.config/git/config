[user]
  name = Justin Retzolk

[diff]
  noprefix = true

[pull]
  rebase = false

[init]
  defaultBranch = "main"

[alias]
  pushd = "push -u origin HEAD"

# GitHub specific configuration
[includeIf "gitdir:**/github.com/**"]
	path = ~/.config/git/github
[includeIf "gitdir:~/.dotfiles/**"]
	path = ~/.config/git/github

# Use SSH instead of HTTPS.
[url "ssh://git@github.com/"]
	insteadOf = https://github.com/
